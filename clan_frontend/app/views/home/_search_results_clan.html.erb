<div class="col-lg-4">

<div class="row">
  <div class="col-lg-3"><%= image_tag clan['emblems']['large'] %></div>

  <div class="col-lg-9">
    <h4><%= clan['link_or_title'] %></h4>
    <p class="text-muted"><%= clan['motto'] %></p>
    <p><%= t('app.search.members_count', :count => clan['members_count']) %></p>
    <% if @vars[:can_do_alliance] and clan['clan_id'] != session[:user_clan] %>
      <small>
        <% if clan['site_exists'] %>
          <%= link_to t('cp.alliance.ally_with'),
                      '#',
                      :class => 'btn btn-primary'
          %><% else %>
          <%= t('cp.alliance.clan_has_no_site') %>
        <% end %>
      </small>
    <% end %>
  </div>
</div>

</div>
