<h1><%= t 'cp.domain.subdom.edit'  %></h1>

<p><%= t 'cp.domain.subdom.about1',
         :subdomain_base => @vars[:subdomain_base] %></p>
<p><%= t 'cp.domain.subdom.about2' %></p>

<%= form_tag admin_domain_free_path,
             :role => 'form',
             :method => 'post' do %>
  <div class="form-group">
    <label for="domain"><%= t('cp.domain.subdom.domain_field') %></label>
    <input type="text" class="form-control" id="domain" name="domain"
           placeholder="<%= t('cp.domain.subdom.domain_field_hint') %>"
           value="<%= @vars[:site]['free_subdomain'] %>">
  </div>
  <p><%= t 'cp.domain.alphabet' %></p>
  <button type="submit" class="btn btn-primary"><%= t('cp.domain.update') %></button>
<% end %>
