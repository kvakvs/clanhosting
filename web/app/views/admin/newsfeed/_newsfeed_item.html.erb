<tr>
  <td><%= i['title'] %></td>
  <td><%= i['short'] %></td>
  <td><%= i['updated_at'] %></td>
  <td>
    <%= link_to t('cp.newsfeed.edit'),
        main_app.edit_admin_newsfeed_path(:id => i['id']),
        :class => 'btn btn-default btn-xs' %>
    <%= link_to t('cp.newsfeed.delete_post'),
        main_app.admin_newsfeed_path(:id => i['id']),
        :onclick => "return confirm('#{t('cp.newsfeed.confirm_delete')}\\n#{i['short']}')",
        :method => 'delete',
        :class => 'btn btn-danger btn-xs' %>
  </td>
</tr>