<!DOCTYPE html>
<html>
<head>
  <title><%=t 'app.title' %></title>
  <meta charset="utf-8" />
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag "forem" %>
  <%= javascript_include_tag "forem" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if notice %><p class="alert alert-success"><%= notice %></p><% end %>
<% if alert %><p class="alert alert-danger"><%= alert %></p><% end %>
<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= link_to t('app.frontpage'), main_app.root_path %>
      <% if session[:user_clan] != 'null' and (not session[:user_clan].nil?) and session[:clan_forum_exists] %>
        &bull; <%= link_to t('app.forums'), forem.category_path(:id => session[:user_clan]) %>
      <% end %>
      <% if user_signed_in? and not session[:clan_forum_exists] %>
        <%= t('app.no_forum_yet') %>
        <%= link_to t('app.create_forum'), main_app.home_new_forum_path %>
      <% end %>
    </div>

    <div class="col-lg-6 text-right">
      <% if user_signed_in? %>
        <%=t 'app.logged_in_as' %> <strong><%= session[:user_nickname] %></strong>,
          <% if session[:user_clan] != 'null' %><%= t('app.member_of_clan') %>
            [<%= session[:clan_info]['abbreviation'] %>]
            <%= session[:clan_info]['name'] %>
          <% else %>
            <%= t 'app.no_clan' %><% end %>
        <!--%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %-->
        <%= link_to t('app.logout'), main_app.wot_log_out_path, method: :delete, :class => 'btn btn-warning' %>

      <% else %>
        <form method="post" action="https://api.worldoftanks.ru/wot/auth/login/">
          <a href="https://worldoftanks.ru/registration/ru/" class="btn btn-default"><%=t 'app.register' %></a>
          <input type="hidden" name="application_id" value="a2725c4b342fdf9977ffe92a2b84f4ee" />
          <input type="hidden" name="redirect_uri" value="<%= main_app.home_wot_logged_in_url %>" />
          <input type="hidden" name="expires_at" value="86400" />
          <input type="submit" value="<%=t 'app.login_with_wot_id' %>" class="btn btn-primary" />
        </form>
      <% end %>
    </div><!--col-->
    <div class="col-lg-1 text-right">
      <%= t 'app.lang_switch' %>
      <%= link_to 'RU', main_app.root_url(:locale => 'ru') %>
      <%= link_to 'EN', main_app.root_url(:locale => 'en') %>
    </div><!--col-->
  </div><!--row-->

<div class="row"><div class="col-lg-12">
<%= yield %>
</div><!--col--></div> <!--row-->
</div><!--ctnr-->

</body>
</html>
