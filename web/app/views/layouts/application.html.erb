<!DOCTYPE html>
<html>
<head>
  <title><%=t 'app.title' %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag "forem" %>
  <%= javascript_include_tag "forem" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if notice %><p class="alert alert-success"><%= notice %></p><% end %>
<% if alert %><p class="alert alert-danger"><%= alert %></p><% end %>
<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= link_to t('app.frontpage'), main_app.root_path %>
      <% if session[:user_clan] != 'null' %>&bull; <%= link_to t('app.forums'), forem.category_path(:id => session[:user_clan]) %><% end %>
    </div>

    <div class="col-lg-6"><div class="text-right">
      <% if user_signed_in? %>
        <%=t 'app.logged_in_as' %> <strong><%= session[:user_nickname] %></strong>,
          <% if session[:user_clan] == :null %><%= t 'app.member_of_clan', session[:user_clan] %> <% else %><%= t 'app.no_clan' %><% end %>
        <!--%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %-->
        <%= link_to t('app.logout'), main_app.wg_log_out_path, method: :delete, :class => 'btn btn-warning' %>

      <% else %>
        <form method="post" action="https://api.worldoftanks.ru/wot/auth/login/">
          <a href="https://worldoftanks.ru/registration/ru/" class="btn btn-default"><%=t 'app.register' %></a>
          <input type="hidden" name="application_id" value="a2725c4b342fdf9977ffe92a2b84f4ee" />
          <input type="hidden" name="redirect_uri" value="<%= main_app.home_wg_logged_in_url %>" />
          <input type="hidden" name="expires_at" value="86400" />
          <input type="submit" value="<%=t 'app.login_with_wot_id' %>" class="btn btn-primary" />
        </form>
      <% end %>

      <%= link_to 'ru', main_app.root_url(:locale => 'ru') %>
      <%= link_to 'en', main_app.root_url(:locale => 'en') %>
    </div><!--right-->
    </div><!--col-->
  </div><!--row-->

<div class="row"><div class="col-lg-12">
<%= yield %>
</div><!--col--></div> <!--row-->
</div><!--ctnr-->

</body>
</html>
